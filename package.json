{
  "name": "exceptions-with-cause",
  "version": "2.1.0",
  "description": "Simple utility to provide errors with causes",
  "license": "MIT",
  "keywords": [
    "error",
    "error-handling",
    "exception",
    "debug"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/WhiteAutumn/exceptions-with-cause.git"
  },
  "engines": {
    "node": ">=12.20.0"
  },
  "main": "./dist/cjs/cjs/index.js",
  "module": "./dist/mjs/mjs/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/mjs/mjs/index.d.ts",
        "default": "./dist/mjs/mjs/index.js"
      },
      "require": {
        "types": "./dist/cjs/cjs/index.d.ts",
        "default": "./dist/cjs/cjs/index.js"
      }
    }
  },
  "files": [
    "package.json",
    "package-lock.json",
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint . --max-warnings=0",
    "test": "mocha .",
    "test:watch": "mocha --watch --reporter min .",
    "build": "run-p build:*",
    "build:require": "tsc --project tsconfig.commonjs.json",
    "build:modules": "tsc --project tsconfig.esm.json",
    "postbuild": "node ./scripts/postbuild.mjs",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chai": "^4.0.0",
    "esbuild": "^0.14.0",
    "esbuild-runner": "^2.0.0",
    "eslint": "^8.0.0",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.0.0",
    "typescript": "~4.7.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
