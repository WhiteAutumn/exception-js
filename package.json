{
  "name": "exceptions-with-cause",
  "version": "2.0.0",
  "description": "Library to provide errors with causes",
  "type": "module",
  "exports": {
    "require": "./dist/cjs/index.c.js",
    "import": "./dist/mjs/index.m.js"
  },
  "engines": {
    "node": ">=12.20.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WhiteAutumn/exceptions-with-cause.git"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "mocha .",
    "test:watch": "mocha --watch --reporter min .",
    "build": "run-p build:*",
    "build:require": "tsc --project tsconfig.require.json",
    "build:modules": "tsc --project tsconfig.modules.json",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chai": "^4.0.0",
    "esbuild": "^0.14.0",
    "esbuild-runner": "^2.0.0",
    "eslint": "^8.0.0",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.0.0",
    "typescript": "~4.7.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
